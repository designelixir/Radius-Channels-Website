<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet"> 
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    <section class="homepage-hero">
      <header class="site-header box-shadow">
        <squarespace:navigation navigationId="siteNav" template="site-navigation" />
        <div class="overlay"></div>
      </header>
      <squarespace:block-field id="heroVideo" columns="12"/>

      <div class="hero-text-container flex-center-start">
        <div>
        {@|apply textRotation.block}
        <div class="flex-center-center flex-wrap" style="margin-top: 50px;">
            <a class="button solid-button" href="/#ourMission">Our Mission</a>
            <a class="button solid-button" href="/#ourFormula">Formula</a>
            <a class="button inverted-button" href="/our-mission">Methodology</a>
        </div>
        
        </div>
      </div>
      <div class="spacer"></div>
      <div class="spacer"></div>
      
    </section>
    <div id="ourMission" class="basic-padding flex-center-spacebetween" style="margin-top: 100px;">
      <div style="max-width: 600px;">
      <h2 class="orange-h2">Our <span class="thick">Mission</span> </h2>
      <h4>Radius Channels is singularly-focused on next-generation strategies for increasing your channel reach, scale and velocity through flawless execution and timely delivery of innovative, customized support resources using our proven methodology. Simply put, we are a catalyst for accelerating growth!</h4>
      {#  <button class="solid-button">Meet the People Behind Radius Channels &rarr;</button>  }
      </div>
      <img src="https://www.shutterstock.com/image-photo/digital-transformation-conceptual-next-generation-260nw-1710091141.jpg" style="max-height: 200px;"/>
    </div>

    <div id="ourFormula" class="basic-padding flex-center-spacebetween" style="margin-top: 100px; ">
      {@|apply flowchart.block}
      <div style="max-width: 600px;  text-align: right;">
      <h2 class="orange-h2">Our <span class="thick">Formula</span> </h2>
      <h4>Our formula for success is simple: Reach x Frequency x Scale leads to next-generation results.</h4>
      </div>
      
    </div>

    <div id="ourMethodology" class="basic-padding" style="margin-top: 100px; ">
      <div style="text-align: center; ">
      <h2 class="orange-h2">Our <span class="thick">Methodology</span> </h2>
      <h4>Radius Channels provides a white-glove approach to sales, technical, marketing and operations support that is tailored to your organization.</h4>

      </div>
      <div class="flex-center-center">
        <div class="methodology" style="text-align: center;">
          
          <img src="assets/10.png" style="height: 150px">
          <h3>Vendor Specialized Staff</h3>
        </div>    
        <div class="methodology" style="text-align: center;">
          
          <img src="assets/12.png" style="height: 150px">
          <h3>Operational Excellence</h3>
        </div>   
        <div class="methodology" style="text-align: center;">
          
          <img src="assets/11.png" style="height: 150px">
          <h3>Marketing &amp; Demand</h3>
        </div> 
        <div class="methodology" style="text-align: center;">
          
          <img src="assets/8.png" style="height: 150px">
          <h3>Sales Engineering</h3>
        </div> 
        <div class="methodology" style="text-align: center;">
          
          <img src="assets/9.png" style="height: 150px">
          <h3>Customer Services</h3>
        </div> 
    
      
      </div>
      
      
    </div>
    

    
    
      <!-- cms content injection point -->
      <main class="content-container basic-padding" role="main" data-content-field="main-content" id="main-section">
      
       {squarespace.main-content}
       
      </main>
    
      <!--Footer with open block field -->
      <footer class="site-footer">
        {@|apply footer-navigation.block}
      </footer>

    

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>


