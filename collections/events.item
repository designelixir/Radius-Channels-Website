
{.section item}
      <div class="full-size-event-header-full-page box-shadow" {.if assetUrl} style="background-image: url({assetUrl}); background-size: cover;" {.or} style="background-image: url('../assets/event-bg.png');"{.end}></div>
        <div class="full-size-event" id="{title}-fullpage-event"  >


		<div style="margin: 25px; border-bottom: 3px solid var(--darkblue)">
            {.if customContent.eventType}
			<span class="tag">Virtual Event</span>
			{.or}
			<span class="tag">In-Person Event</span>
			{.end}
            
			<h2>{title}</h2>
      
			<h3 style="color: var(--orange); margin: 5px;">{structuredContent.startDate|date %B %d, %Y %I:%M %p} - {structuredContent.endDate|date %B %d, %Y %I:%M %p }</h3>
			<p style="color: gray"><i>{customContent.eventTimeZone}</i></p>
      <div class="flex-center-start">
      {.if tags}
		<p class="strong">Sponsored by: &nbsp;</p>
		{.repeated section tags}
              <p class="tag">{@}</p>{.alternates with}&nbsp;
            {.end}
        {.end}</div>
		{.if categories}
		    <p class="strong">Tags: &nbsp;</p>
		{.repeated section categories}
              <p class="tag" style="background-color: var(--orange)!important">{@}</p>{.alternates with}&nbsp;
            {.end}
		{.end}
    
	</div>
	<div style="margin: 25px; ">
  
		<p>{excerpt}</p>
		<p>{body}</p>
		{.if sourceUrl}
		<button class="solid-button" onclick="window.open('{sourceUrl}')">Register Now</button>
		{.end}
	</div>
</div>
{.end}


