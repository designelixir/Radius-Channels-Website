
<!-- item loop -->
{.repeated section items}

<div class="homepage-section">

{.if body}
<div class="homepage-layout-left-right display: flex-start-spacebetween">
  <div>
    <h1 class="homepage-section-title">{title}</h1>
    {.if excerpt}<h3 class="homepage-section-excerpt">{excerpt}</h3>{.end}
  </div>
  <div>
    {body}
  </div>
</div>
{.or}

<div class="homepage-layout-left-right display: flex-start-spacebetween">
  <h1 class="homepage-section-title">{title}</h1>
  <h3 class="homepage-section-excerpt">{excerpt}</h3>
</div>

{.end}

</div>


{.end}

