<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet"> 
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    
    
     

      
      <div id="eventsHeader">
        <header class="site-header">
        <squarespace:navigation navigationId="siteNav" template="site-navigation" />        
      </header>
        <div class="basic-padding flex-spacebetween-start " style="height: 300px;">
            <div style="width: 100%; ">
                <h1 class="white-text">{collection.title}</h1>
                <div style="color: white; max-width: 600px;">{collection.description}</div>
            </div>
            
            <div class="flex-center-center" >
                <div style="color: gray; background: white; border: 1px solid gray; width: 400px;" class="box-shadow">
                    <p style="padding-left: 10px;">Email Address</p>
                </div>
                <button style="margin: 0 15px 0!important">Get Event Emails</button>
            </div>
        </div>
    </div>

    <div id="eventsContainer" class="flex-start-center">
        <div id="eventsList">
            <div class="event-container flex-center-center active-event">
                <div class="event flex-start-start ">
                    <div class="event-image " style="background-image: url('assets/event-bg.png')">
                    </div>
                    <div>
                        <h6>June 11th, 2023</h6>
                        <h3>Event Title 1</h3>
                        <p>Event Description Event Description Event Description Event Description</p>
                    </div>
                </div>
                
                    <img src="assets/blue-arrow.png" class="event-selected-arrow" style="width: 25px;">
                
            </div>

            <div class="event-container flex-center-center">
                <div class="event flex-start-start">
                    <div class="event-image ">
                    </div>
                    <div>
                        <h6>June 11th, 2023</h6>
                        <h3>Event Title 2</h3>
                        <p>Event Description Event Description Event Description Event Description</p>
                    </div>
                </div>
                <div class="event-selected-indicator flex-center-center">
                    <img src="assets/blue-arrow.png" class="event-selected-arrow" style="width: 25px;">
                </div>
            </div>

            <div class="event-container flex-center-center">
                <div class="event flex-start-start">
                    <div class="event-image ">
                    </div>
                    <div>
                        <h6>June 11th, 2023</h6>
                        <h3>Event Title 3</h3>
                        <p>Event Description Event Description Event Description Event Description</p>
                    </div>
                </div>
                
                <img src="assets/blue-arrow.png" class="event-selected-arrow" style="width: 25px;">
                
            </div>
        
        </div>
        <div id="eventDetail" >
            <div class="event-detail-container" style="width: calc(100%)">
                <div style="background-image: url(assets/event-bg.png);">
                
                    <div class="full-size-event ">
                        <div>
                            <p>Event Type</p>
                          
                                <h1>Event Title 1</h1>
                                <h3>June 30th, 2023 <br> 11:30pm-1:30pm MT</h3>
                                <h3>Denver, Colorado</h3>
                                
                               
                            
                        </div>
                        
                    </div>
                </div>
                <div class="basic-padding">
                    <p>Event Description Event Description Event Description Event Description Event Description Event Description Event Description Event Description Event Description Event Description Event Description Event Description</p>
                     <button class="solid-button box-shadow">Register Now</button>
                </div>
                <squarespace:block-field id="sampleEventField" columns="12"/>
                </div>
        </div>
        
    </div>
        
      
   


    

    
    
      <!-- cms content injection point -->
      <main class="content-container basic-padding" role="main" data-content-field="main-content" id="main-section">
      
       {squarespace.main-content}
       
      </main>
    
      <!--Footer with open block field -->
      <footer class="site-footer">
        {@|apply footer-navigation.block}
      </footer>

    

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>


